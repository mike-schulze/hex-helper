<UserControl x:Class="HexHelper.View.AuctionHouseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HexHelper.View"
             xmlns:view="clr-namespace:HexHelper.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding AuctionHouse, Source={StaticResource Locator}}">
    <Grid>
        <view:HexItemsListControl Items="{Binding Items}"
                                  DefaultSortColumn="PricePlatinum"/>
    </Grid>
</UserControl>
